
<div class="d-flex justify-content-center p-4">
  <%= form_with model: @rate, url: :set_currency do |f| %>
    <div class="form-group">
      <label for="value" class="center-text">Значение форсированного курса</label>
      <%= f.number_field :value, class: "form-control", autocomplete: "off" %>
    </div>
    <div class="form-group">
      <label for="expired_date">Время истечения действия форсированного курса</label>
      <%= f.text_field :expired_date, class: "form-control", autocomplete: "off" %>
    </div>
    <div class="d-flex justify-content-center p-2">
      <%= f.submit "Set rate", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<script>
  $(document).on('read turbolinks:load', function(){
    $('#rate_expired_date').datetimepicker();
  })
</script>
